<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EstiloTabla">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EstiloFila">
        <item name="android:padding">2dp</item>
    </style>

    <style name="EstiloTitulo">
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:text">@string/valorInicial</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EstiloCelda">
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:text">@string/valorInicial</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EstiloInput">
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:text">@string/valorInicial</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14dp</item>
        <item name="android:inputType">numberSigned</item>
    </style>

    <style name="EstiloCelda.totalRonda">
        <item name="android:layout_width">30dp</item>
    </style>

    <style name="EstiloColor">
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="EstiloTotalJugador">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/valorInicial</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>