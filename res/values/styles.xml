<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EstiloTabla">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/back</item>
    </style>

    <style name="EstiloTabla.landscape">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EstiloTitulo">
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:maxWidth">70dp</item>
    </style>

    <style name="EstiloTitulo.jugador">
        <item name="android:inputType">text</item>
    </style>

    <style name="EstiloTitulo.landscape">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="EstiloTitulo.landscape.jugador">
        <item name="android:inputType">text</item>
    </style>

    <style name="EstiloInput">
        <item name="android:inputType">numberSigned</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#80ffffff</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="EstiloTotal">
        <item name="android:padding">2dp</item>
        <item name="android:text">@string/valorInicial</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="EstiloTotal.jugador">
        <item name="android:background">#80ffffff</item>
    </style>

    <style name="EstiloTotal.jugador.landscape">
        <item name="android:background">#80ffffff</item>
    </style>

    <style name="EstiloCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>